{
  "name": "docker-log-sentinel",
  "version": "1.0.0",
  "description": "A TypeScript CLI that monitors Docker logs and sends smart alerts",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "build": "bun build index.ts --outdir dist --target bun",
    "dev": "bun --watch index.ts"
  },
  "dependencies": {
    "dockerode": "^4.0.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.29",
    "@types/yargs": "^17.0.32",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "trustedDependencies": [
    "@types/bun"
  ]
}